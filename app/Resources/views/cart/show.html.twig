{% extends 'base.html.twig' %}

{% block title %}购物车{% endblock %}

{% block body %}
    <h3>显示购物车</h3>
    <form action="{{ url('trade_new',{id: product.id}) }}" method="post">
    <ul>
        <li>产品名称:{{ product.title }}</li>
        <li>价格:{{ product.price }}</li>
        <li><label for="number">数量:<input type="text" name="number" value="{{ number }}" size="2"/> </label></li>
        <li>金额:</li>
        <li><input type="hidden" name="token" value="{{ csrf_token('cart-number') }}"/><button type="submit">确定购买</button></li>
    </ul>
    </form>
{% endblock %}