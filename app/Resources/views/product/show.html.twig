{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ product.company }}</td>
            </tr>
            <tr>
                <th>Titleimg</th>
                <td>{{ product.titleImg }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_index') }}">Back to the list</a>
        </li>
        <li>
            <form action="{{ url('cart_show',{id: product.id}) }}" method="post">
            <label for="number">数量
            <input type="text" value="1" class="product-number" name="number" size="2"/>
            </label>
            <input type="hidden" name="token" value="{{ csrf_token('data-number') }}"/>
                <button type="submit">购买</button>
            </form>
        </li>
    </ul>
{% endblock %}
