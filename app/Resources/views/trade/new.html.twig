{% extends 'base.html.twig' %}

{% block title %}完成购买{% endblock %}

{% block body %}
    <h3>已经完成购买，显示订单</h3>
    <ul>
        <li>产品名称:{{ consume.product.title }}</li>
        <li>价格:{{ consume.product.price }}</li>
        <li>数量:{{ consume.number }}</li>
        <li>金额:{{ consume.amount }}</li>
        <li>时间:{{ consume.createdAt|date('Y年m月d日 H:i:s') }}</li>
    </ul>
{% endblock %}